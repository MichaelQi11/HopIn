<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RiderMapActivity">


    <TextView
        android:id="@+id/menuTextView"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="56dp"
        android:textColor="@color/ColorOrange"
        android:text="Menu"
        android:textSize="50dp" />

    <Button
        android:id="@+id/riderMyProfile"
        android:background="@drawable/orange_all_round_corner_login"
        android:textSize="16dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="200dp"
        android:text="My Profile" />

    <Button
        android:id="@+id/riderChat"
        android:background="@drawable/orange_all_round_corner_login"
        android:textSize="16dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/riderMyTrips"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="12dp"
        android:text="Chat (Coming Soon)" />

    <Button
        android:id="@+id/riderMyTrips"
        android:layout_width="250dp"
        android:background="@drawable/orange_all_round_corner_login"
        android:textSize="16dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/riderMyProfile"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="12dp"
        android:text="My Trips" />


</RelativeLayout>