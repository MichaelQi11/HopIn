<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:background="@color/ColorWhite">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/ColorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/orange_top_round_corner">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:text="A driver responded your request ..."
                android:textColor="@color/ColorWhite"
                android:textSize="22sp" />

        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rider_driver_offer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold"
                android:text="@string/sample_text"
                android:textColor="@color/ColorBlack"
                android:textSize="18sp" />

            <Button
                android:id="@+id/rider_offer_call_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"
                android:background="@drawable/button_round"
                android:drawableTop="@android:drawable/ic_menu_call"
                android:textColor="@color/quantum_black_100"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rider_offer_email_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:background="@drawable/button_round"
                android:drawableTop="@android:drawable/sym_action_email"
                android:textColor="@color/quantum_black_100"
                android:textSize="20sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/rider_driver_offer_rating"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@android:drawable/star_big_on"
            android:text="rating"
            android:textColor="@color/ColorBlack"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car:  "
                android:textStyle="bold"
                android:textColor="@color/ColorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rider_driver_offer_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="color and make and model"
                android:textColor="@color/ColorBlack"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="License Plate:  "
                android:textStyle="bold"
                android:textColor="@color/ColorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rider_driver_offer_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="plate number"
                android:textColor="@color/ColorBlack"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/rider_driver_offer_accept_button"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/orange_all_round_corner"
                android:text="ACCEPT"
                android:textColor="@color/ColorOrange" />

            <Button
                android:id="@+id/rider_driver_offer_decline_button"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="70dp"
                android:background="@drawable/orange_all_round_corner"
                android:text="DECLINE"
                android:textColor="@color/ColorOrange" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
